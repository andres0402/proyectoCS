<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <div class="w-1/2 px-4 mr-auto">
        <p class="text-2xl py-7">Propuestas para el sector {{sector}}</p>
      </div>
  <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">


    <table class="table-fixed w-full">
      <thead>
        <tr class="bg-blue-500 text-white">
          <th class="w-20 py-4 ...">ID</th>
          <th class="w-1/4 py-4 ...">Titulo</th>
          <th class="w-1/2 py-4 ...">Descripcion</th>
          <th class="w-28 py-4 ...">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each resul}}
        <tr>
          <td class="py-3 px-6">{{id}}</td>
          <td class="p-3">{{title}}</td>
          <td class="p-3 text-center">{{description}}</td>
          <td class="p-3 flex">
            <a href="/view/{{id}}" class="bg-green-500 text-white px-3 py-1 rounded-sm">
              <i class="fas fa-eye"></i></a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="block mx-auto my-12 p-1 w-1/3 text-gray-800">
  <form action="/proposal/{{sector}}">
  <button class="rounded-md bg-blue-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-blue-700">Crear propuesta</button>
  </form>
  <form action="/inicio">
  <button href="/" class="rounded-md bg-blue-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-blue-700">Cerrar sesion</button>
  </form>
  </div>
 
</div>